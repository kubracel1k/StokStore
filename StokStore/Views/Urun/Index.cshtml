@using StokStore.Models.Entity;
@model List<tbl_urunler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table id="tbl1" class="table table-bordered">
    <thead>
        <tr>
            <th>Ürün ID</th>
            <th>Ürün Adı</th>
            <th>Marka</th>
            <th>Kategori</th>
            <th>Fiyat</th>
            <th>Stok</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var urn in Model)
        {
        <tr>
            <th>@urn.URUNID</th>
            <td>@urn.URUNAD</td>
            <td>@urn.MARKA</td>
            <td>@urn.tbl_kategori.KATEGORİAD</td>
            <td>@urn.FIYAT</td>
            <td>@urn.STOK</td>
            <td><a href="/Urun/Sil/@urn.URUNID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Urun/UrunGetir/@urn.URUNID" class="btn btn-success">Güncelle</a></td>
        </tr>
        }
    </tbody>
</table>
<a href="/Urun/UrunEkle/" class="btn btn-primary">Yeni Ürün Ekle</a>


<link href="~/Content/DataTables/css/dataTables.bootstrap4.css" rel="stylesheet" />

<script>
    $('#tbl1').DataTable();
</script>