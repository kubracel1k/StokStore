@model StokStore.Models.Entity.tbl_urunler
@{
    ViewBag.Title = "UrunEkle";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<form method="post" class="form-group">
    <div>
        <label>Ürün Adı</label>
        <input type="text" class="form-control" name="URUNAD" required="" />
    </div>
    <div>
        <label>Marka</label>
        <input type="text" class="form-control" name="MARKA" required=""/>
    </div>
    <div>
        <label>Kategori Seçiniz </label>
       @Html.DropDownListFor(m =>m.tbl_kategori.KATEGORİID, (List<SelectListItem>)ViewBag.dgr, new { @class="form-control"})
    </div>
    <div>
        <label>Fiyat</label>
        <input type="text" class="form-control" name="FIYAT" required=""/>
    </div>
    <div>
        <label>Adet</label>
        <input type="text" class="form-control" name="Stok"required=""/>
    </div>
    <div style="margin-top:15px;">
        <button class="btn btn-info">Ürün Ekle</button>
    </div>
</form>
